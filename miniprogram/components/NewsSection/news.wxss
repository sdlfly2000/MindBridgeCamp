.swiper-item-container{
  display: flex;
  flex-direction: row;
  height: 100%;
  background-color: rgb(224, 238, 255);
}

.swiper-item-image-container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 50%;
}

.swiper-item-image { 
  width: 80%;
  height: 80%;
  margin: auto;
}

.swiper-item-content {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.swiper-item-title {
  color: brown;
  font-size: small;
  font-weight: bold;
}

swiper {
  height: 100%;
