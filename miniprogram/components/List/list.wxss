.invitations-container {
  height: 90%;
}

.invitation-item {
  margin: 20rpx !important;
  border: 1rpx solid rgb(213, 213, 213);
  border-radius: 20rpx;
}

.invitation-title {
  color: darkred !important;
  font-size: larger !important;
  font-weight: bolder !important;
}

.btn_join{
  margin-left: 15rpx;
}

.invitation-detail-overlay{
  height: 80%;
  overflow: scroll;
}

.invitation-detail-container{
  display: flex;
  flex-direction: column;
  background-color: white;
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: scroll;
  height: 80%;
}

.invitation-detail-title{
  display: flex;
  flex-direction: row;
  justify-content: center;
  font: bold;
  font-size: large;
  margin-top: 20rpx;
}

.invitation-detail-participants {
  margin: 10rpx;
}

.invitation-detail-buttons{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 20rpx;
}

.invitation-detail-button{
  margin:10rpx;
}