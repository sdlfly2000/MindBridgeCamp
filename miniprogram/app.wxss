/**app.wxss**/
.container{
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.page-section {
  margin-bottom: 20rpx;
  border-bottom: dimgray dashed 1rpx;
  width: 100%;
  text-align: center;
}

.page-section-title {
  margin: 20rpx;
  font-weight: bolder;
  font-size: large;
}

.page-section-content {
  margin: 20rpx;
}

.card-section {
  margin: 5rpx;
  width: 100%;
  height: 100%;
  border: #B0C4DE dotted 1rpx;
}

.card-item {
  flex-direction: column;
  margin: 5rpx;
  width: 100%;
  height: 100%;
  border: black dotted 1rpx;
}

.card-title {
  margin: 5rpx;
  width: 100%;
  height: 100%;
  border: blue dotted 1rpx;
}

.card-image {
  width: 50%;
  height: 50%;
  border: red dotted 1rpx;
}