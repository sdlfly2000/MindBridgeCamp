page {
  height: 100%;
}

.head-section {  
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  width: 200%;
  height: 40%;
  overflow: hidden;
  border-radius: 0 0 50% 50%;
  position: absolute;
  left:-50%;
}

.func-section{
  position: relative;
  width: 100%;
  height: 50%;
  top:40%;
}

.head-section-background-image {
  position: relative;
  display: flex;
  height: 100%;
  width: 100%;
}

.main-menu-container{
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
}

.main-menu {
  width: 250rpx;
  margin-bottom: 40rpx;
}

.van-sticky {
  position: relative;
  width: 40%;
}